---
import Card from "./Card.astro";
import { getCertification } from "../services/jimcostdev";

const data = await getCertification(); // llamada a la API
---
<h2 class="font-bold text-xl text-green-400 text-center my-4">astro card</h2>  
<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
  {
    data.map(({ id, company, certification, link }) => (
      <Card
        id={id}
        company={company}
        certification={certification}
        link={link}
      />
    ))
  }
</div>